---
import DateCell from "@/components/DateCell.astro";
import Form from "@/components/Form.astro";
import type { LinkEntry } from "@teamgalena/shared/database";
import { extractFlags } from "@teamgalena/shared/flags";

const { value } = Astro.props as { value: LinkEntry };

const flags = extractFlags(value.flags);
---

<td>{value.uuid}</td>
<td>{value.discordId}</td>
<td>
  <DateCell value={value.createdAt} />
</td>
<td>
  <DateCell value={value.updatedAt} />
</td>
<td>{value.rank}</td>
<td>
  <ul class="flags">
    {flags.map((it) => <li>{it}</li>)}
  </ul>
</td>
<td class="actions">
  <Form hx-target="#popup">
    <input hidden name="discordId" value={value.discordId} />
    <button title="Edit" hx-post="/dialog/edit">‚úèÔ∏è</button>
    <button title="Delete" hx-post="/dialog/delete">üóëÔ∏è</button>
  </Form>
</td>

<style scoped>
  .flags {
    display: flex;
    max-width: 300px;
    flex-wrap: wrap;
    gap: 0.25em;
    justify-content: left;
    align-items: center;
    list-style: none;

    li {
      background: #fff3;
      border-radius: 9999px;
      padding: 0.25em 0.5em;
    }
  }

  .actions {
    button {
      background: none;
      border: none;
      outline: none;

      font-size: 1.25em;

      transition: background 0.2s ease;
      border-radius: 0.25em;

      &:hover {
        background: #fff3;
      }
    }
  }
</style>
