---
import type { LinkEntry } from "@teamgalena/shared/database";
import type { Page } from "@teamgalena/shared/models";
import DateCell from "./DateCell.astro";

const { page } = Astro.props as { page: Page<LinkEntry> };
---

<div>
  <p class="info">
    {page.pageInfo.total} supporters have linked their minecraft account
  </p>
  <table>
    <thead>
      <tr>
        <th>UUID</th>
        <th>Discord-ID</th>
        <th>Created</th>
        <th>Updated</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {
        page.items.map(({ value }) => (
          <tr>
            <td>{value.uuid}</td>
            <td>{value.discordId}</td>
            <td>
              <DateCell value={value.createdAt} />
            </td>
            <td>
              <DateCell value={value.updatedAt} />
            </td>
            <td>
              <form>
                <input type="hidden" name="uuid" value={value.uuid} />
                <button hx-post="/edit" hx-target="#popup">
                  ‚úèÔ∏è
                </button>
                <button hx-post="/delete" hx-target="#popup">
                  üóëÔ∏è
                </button>
              </form>
            </td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>

<style>
  .info {
    text-align: center;
  }

  table {
    border-collapse: collapse;
    font-size: 1.2em;
  }

  th {
    padding: 0.5em;
  }

  tbody {
    tr:nth-child(odd) {
      background: #fff2;
    }

    td {
      padding: 0.25em 0.5em;

      button {
        background: none;
        border: none;
        outline: none;
        cursor: pointer;

        font-size: 1.25em;

        transition: background 0.2s ease;
        border-radius: 0.25em;

        &:hover {
          background: #fff3;
        }
      }
    }
  }
</style>
